---
import { Zoom } from 'starlight-image-zoom/components'

export interface Props {
  src: string;  // just the filename, like "simplified_architecture.png"
  alt: string;
}

const { src, alt} = Astro.props;

// Use public URLs that Astro can resolve
const lightSrc = `/src/assets/diagrams/light/${src}`;
const darkSrc = `/src/assets/diagrams/dark/${src}`;
---

<Zoom label={alt}>
</Zoom>
<Zoom label={alt}>
  <img src={lightSrc} alt={alt} class="dark:sl-hidden" loading="lazy" />
  <img src={darkSrc} alt={alt} class="light:sl-hidden" loading="lazy" />
</Zoom>
