---
import { Image } from "astro:assets";

export interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  reversed?: boolean;
}

const { title, description, image, reversed = false } = Astro.props
---

<div class="sidekick max-w-6xl w-full py-16 flex flex-col md:flex-row items-center justify-between gap-8 md:gap-12">
  <Image src={image} alt={`${title} image`} class={`w-full min-w-0 max-w-2xl rounded-lg shadow-lg flex-2 z-3 ${reversed ? 'md:order-2' : 'md:order-1'} `} width={800} height={600} />
  <div class={`flex-1 flex flex-col items-center z-3 md:items-start text-center md:text-left ${reversed ? 'md:order-1' : 'md:order-2'}`}>
    <h2 class="tracking-tight leading-tight font-bold text-2xl md:text-3xl lg:text-4xl" set:html={title} />
    <div class="text-foreground font-light text-base md:text-lg leading-6 md:leading-7 max-w-2xl mt-4" set:html={description} />
  </div>
</div>
