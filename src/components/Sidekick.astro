---
export interface Props {
  title: string;
  description: string;
  demoGif: string;
  reversed?: boolean;
}

const { title, description, demoGif, reversed = false } = Astro.props
---

<section class="sidekick-container w-full py-16 flex items-center justify-center">
  <div class="sidekick max-w-6xl w-full flex flex-col md:flex-row items-center gap-8 md:gap-12">
    <div class={`flex justify-center flex-1 z-3 ${reversed ? 'md:order-2' : 'md:order-1'}`}>
      <img src={demoGif} alt={`${title} demo`} class="w-full rounded-lg shadow-lg" />
    </div>
    <div class={`flex-1 flex flex-col items-center z-3 md:items-start text-center md:text-left ${reversed ? 'md:order-1' : 'md:order-2'}`}>
      <h2 class="tracking-tight leading-tight font-bold text-2xl md:text-3xl lg:text-4xl" set:html={title} />
      <div class="text-foreground font-light text-base md:text-lg leading-6 md:leading-7 max-w-2xl mt-4" set:html={description} />
    </div>
  </div>
</section>
